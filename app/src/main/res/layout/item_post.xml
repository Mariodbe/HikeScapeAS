<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="2dp"
        >

        <!-- ImageView para la foto de perfil -->
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/perfil"
            android:layout_marginEnd="8dp"
            android:clipToOutline="true" />

        <!-- Nombre de usuario con espacio limitado y tamaño de texto reducido -->
        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre de Usuario"
            android:textSize="20sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingEnd="8dp" />

        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginStart="90dp"
            android:src="@drawable/trespuntos" />

        <ImageView
            android:id="@+id/downloadIcon"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/descargar" />
    </LinearLayout>

    <ImageView
        android:id="@+id/postImageView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="4dp"
        android:src="@drawable/image1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="left">

        <ImageView
            android:id="@+id/likeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/like" />

        <ImageView
            android:id="@+id/commentIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/comentario" />

        <ImageView
            android:id="@+id/saveIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="250dp"
            android:src="@drawable/guardar1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/postName"
            android:text="Nombre de Ruta"
            android:layout_marginStart="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/postDescription"
            android:text="descripción"
            android:layout_marginStart="6dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
